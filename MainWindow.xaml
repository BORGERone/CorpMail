<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client" Height="400" Width="400"
        AllowDrop="True" Drop="Window_Drop">
    <Grid>
        <TextBox Name="MessageTextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="360"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="75" Click="SendButton_Click"/>
        <TextBlock Name="ResponseTextBlock" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Height="200" Width="360" TextWrapping="Wrap"/>
        <ComboBox Name="ClientComboBox" HorizontalAlignment="Left" Margin="10,280,0,0" VerticalAlignment="Top" Width="360"/>
    </Grid>
</Window>
